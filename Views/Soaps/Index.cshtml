@model SoapApplication.Models.SoapFragranceViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Soaps" asp-action="Index">
    <p>
        <select asp-for="SoapFragrance" asp-items="Model.Fragrances">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].Ingridients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].Fragrance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].SkinType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].Rating)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Soaps) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingridients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fragrance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkinType)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
